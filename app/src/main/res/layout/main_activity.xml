<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ViewDetailsButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">

    <TextView
        android:id="@+id/WeatherAppTextView"
        android:layout_width="183dp"
        android:layout_height="38dp"
        android:text="Screen Time App"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/DateEditText"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:hint="Date (YYYY-MM-DD)"
        android:text="Date"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/MorningScreenTimeEditText"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:inputType="number"
        android:text="Morning"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="351dp" />

    <EditText
        android:id="@+id/AfternoonScreenTimeEditText"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:inputType="number"
        android:text="Afternoon"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="426dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="275dp"
        android:layout_height="192dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/ActivityNotesEditText"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:hint="Activity Notes"
        android:text="ActivityNotes"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="501dp" />

    <Button
        android:id="@+id/AddButton"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:text="Add"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="576dp" />

    <Button
        android:id="@+id/ClearStoredDataButton"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:text="Clear Stored Data"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="576dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="655dp" />

</androidx.constraintlayout.widget.ConstraintLayout>