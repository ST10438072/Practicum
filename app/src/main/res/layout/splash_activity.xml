<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CAF50">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="174dp"
            android:layout_height="161dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="123dp"
            android:baselineAligned="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/WeatherAppTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/WeatherAppTextView"
            android:layout_width="159dp"
            android:layout_height="64dp"
            android:text="Screen Time App"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="203dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="176dp"
            android:layout_height="69dp"
            android:text="Njabulo Mhlongo"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="291dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="184dp"
            android:layout_height="64dp"
            android:text="   ST10438072"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="382dp" />

        <Button
            android:id="@+id/StartButton"
            android:layout_width="122dp"
            android:layout_height="100dp"
            android:text="Start"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/ExitButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="496dp" />

        <Button
            android:id="@+id/ExitButton"
            android:layout_width="116dp"
            android:layout_height="94dp"
            android:text="Exit"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="496dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>